{
  "manifest_version": 3,
  "name": "YouTube AI Converter",
  "version": "1.0",
  "description": "Extrai transcrições do YouTube e as processa com IA.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "http://localhost:8080/"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["assets/content.js"]
    }
  ]
}